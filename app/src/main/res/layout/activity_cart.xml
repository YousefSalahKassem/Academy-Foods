<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A3551"
    tools:context=".pages.CartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/up"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Shopping Cart"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight=".3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="#FF5722"
            android:id="@+id/remove"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_baseline_delete_24"
            />
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_370sdp"
        android:layout_marginTop="@dimen/_50sdp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/addcart"
        app:lottie_loop="true"
        android:id="@+id/empty"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_370sdp"
        android:layout_below="@+id/up"
        android:id="@+id/cart"
        android:layout_margin="@dimen/_15sdp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/cart"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cardviewcorner"
        android:id="@+id/card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:text="Total"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/total"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/checkout"
                android:background="@drawable/cardviewcornerr"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textSize="@dimen/_18sdp"
                    android:text="Checkout"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        
    </androidx.cardview.widget.CardView>


</RelativeLayout>